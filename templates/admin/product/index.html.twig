{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Produits - Administration{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-box-seam me-2"></i>Gestion des Produits
        </h1>
        <p class="text-muted mb-0">Gérez les produits de votre boutique e-commerce</p>
    </div>
    <a href="{{ path('admin_product_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Nouveau Produit
    </a>
</div>

{% if statistics %}
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Total Produits</h6>
                        <h3 class="mb-0">{{ statistics.totalProducts ?? products|length }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-box-seam fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Produits Actifs</h6>
                        <h3 class="mb-0">{{ statistics.activeProducts ?? 0 }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-check-circle fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Stock Faible</h6>
                        <h3 class="mb-0">{{ statistics.lowStockProducts ?? 0 }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-exclamation-triangle fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Vedettes</h6>
                        <h3 class="mb-0">{{ statistics.featuredProducts ?? 0 }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-star fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Liste des Produits</h5>
            {% if languages|length > 1 %}
            <div class="btn-group btn-group-sm">
                {% for language in languages %}
                <input type="checkbox" class="btn-check" id="lang-{{ language.code }}" autocomplete="off" checked>
                <label class="btn btn-outline-secondary" for="lang-{{ language.code }}">
                    {{ language.code|upper }}
                </label>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
    <div class="card-body">
        {% if products %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>SKU</th>
                        <th>Produit</th>
                        <th>Catégorie</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Statut</th>
                        {% if languages|length > 1 %}
                        <th>Traductions</th>
                        {% endif %}
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                    <tr>
                        <td>
                            <code>{{ product.sku ?? 'N/A' }}</code>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <strong>{{ product.getName(app.request.locale, 'fr') ?? 'Sans nom' }}</strong>
                                    {% if product.brand %}
                                    <br><small class="text-muted">{{ product.brand.getName() }}</small>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if product.categories|length > 0 %}
                            {% for category in product.categories %}
                            <span class="badge bg-secondary">{{ category.getName(app.request.locale, 'fr') }}</span>
                            {% endfor %}
                            {% else %}
                            <span class="text-muted">Aucune</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if product.price %}
                            <strong>{{ product.price }} €</strong>
                            {% else %}
                            <span class="text-muted">N/A</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if product.stock is not null %}
                                {% if product.stock <= 5 %}
                                <span class="badge bg-warning">{{ product.stock }}</span>
                                {% elseif product.stock <= 10 %}
                                <span class="badge bg-info">{{ product.stock }}</span>
                                {% else %}
                                <span class="badge bg-success">{{ product.stock }}</span>
                                {% endif %}
                            {% else %}
                            <span class="text-muted">N/A</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" 
                                       id="active-{{ product.id }}" 
                                       {{ product.isActive ? 'checked' : '' }}
                                       onchange="toggleActive({{ product.id }}, this.checked)">
                                <label class="form-check-label" for="active-{{ product.id }}">
                                    {{ product.isActive ? 'Actif' : 'Inactif' }}
                                </label>
                            </div>
                        </td>
                        {% if languages|length > 1 %}
                        <td>
                            <span class="badge bg-info">{{ product.translations|length }}/{{ languages|length }}</span>
                        </td>
                        {% endif %}
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('admin_product_show', {'id': product.id}) }}" 
                                   class="btn btn-outline-primary" title="Voir">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('admin_product_edit', {'id': product.id}) }}" 
                                   class="btn btn-outline-secondary" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" 
                                      style="display: inline-block;" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                    <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-5">
            <i class="bi bi-box-seam display-1 text-muted"></i>
            <h4 class="mt-3">Aucun produit</h4>
            <p class="text-muted">Commencez par créer votre premier produit.</p>
            <a href="{{ path('admin_product_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i>Créer un produit
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block extra_javascripts %}
{{ parent() }}
<script>
function toggleActive(productId, isActive) {
    fetch(`/admin/product/${productId}/toggle-active`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (!data.success) {
            // Revert checkbox if failed
            const checkbox = document.getElementById(`active-${productId}`);
            checkbox.checked = !isActive;
            alert('Erreur lors de la mise à jour du statut');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        // Revert checkbox if failed
        const checkbox = document.getElementById(`active-${productId}`);
        checkbox.checked = !isActive;
        alert('Erreur lors de la mise à jour du statut');
    });
}
</script>
{% endblock %}