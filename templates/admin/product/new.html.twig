{% extends 'admin/base.html.twig' %}

{% block title %}{{ product.id ? 'Modifier' : 'Nouveau' }} Produit - Administration{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-box-seam me-2"></i>{{ product.id ? 'Modifier' : 'Nouveau' }} Produit
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="{{ path('admin_product_index') }}">Produits</a></li>
                <li class="breadcrumb-item active">{{ product.id ? 'Modifier' : 'Nouveau' }}</li>
            </ol>
        </nav>
    </div>
    <div class="btn-group">
        {% if product.id %}
        <a href="{{ path('admin_product_show', {'id': product.id}) }}" class="btn btn-outline-primary">
            <i class="bi bi-eye me-1"></i>Voir
        </a>
        {% endif %}
        <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Retour
        </a>
    </div>
</div>

<form method="post" id="productForm">
    <div class="row">
        <div class="col-md-8">
            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Informations de base
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="sku" class="form-label">SKU *</label>
                                <input type="text" class="form-control" id="sku" name="sku" 
                                       value="{{ product.sku }}" required>
                                <div class="form-text">Code unique du produit</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="status" class="form-label">Statut *</label>
                                <select class="form-select" id="status" name="status" required>
                                    <option value="draft" {{ product.status == 'draft' ? 'selected' : '' }}>Brouillon</option>
                                    <option value="active" {{ product.status == 'active' ? 'selected' : '' }}>Actif</option>
                                    <option value="inactive" {{ product.status == 'inactive' ? 'selected' : '' }}>Inactif</option>
                                    <option value="archived" {{ product.status == 'archived' ? 'selected' : '' }}>Archivé</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Prix Section -->
                    <h6 class="mb-3"><i class="bi bi-currency-euro me-2"></i>Prix</h6>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="price" class="form-label">Prix de vente (€) *</label>
                                <input type="number" step="0.01" class="form-control" id="price" name="price" 
                                       value="{{ product.price }}" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="compareAtPrice" class="form-label">Prix de comparaison (€)</label>
                                <input type="number" step="0.01" class="form-control" id="compareAtPrice" name="compareAtPrice" 
                                       value="{{ product.compareAtPrice }}">
                                <div class="form-text">Prix barré (doit être > prix de vente)</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="costPrice" class="form-label">Prix de revient (€)</label>
                                <input type="number" step="0.01" class="form-control" id="costPrice" name="costPrice" 
                                       value="{{ product.costPrice }}">
                                <div class="form-text">Pour calcul de marge</div>
                            </div>
                        </div>
                    </div>

                    <!-- Stock Section -->
                    <h6 class="mb-3"><i class="bi bi-boxes me-2"></i>Gestion du stock</h6>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="stock" class="form-label">Stock</label>
                                <input type="number" class="form-control" id="stock" name="stock" 
                                       value="{{ product.stock }}" min="0">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="lowStockThreshold" class="form-label">Seuil de stock faible</label>
                                <input type="number" class="form-control" id="lowStockThreshold" name="lowStockThreshold" 
                                       value="{{ product.lowStockThreshold }}" min="0">
                                <div class="form-text">Alerte en dessous de ce niveau</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Options stock</label>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="trackStock" name="trackStock" 
                                           {{ product.trackStock ? 'checked' : '' }}>
                                    <label class="form-check-label" for="trackStock">Suivre le stock</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Physical Properties -->
                    <h6 class="mb-3"><i class="bi bi-rulers me-2"></i>Propriétés physiques</h6>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="weight" class="form-label">Poids (kg)</label>
                                <input type="number" step="0.001" class="form-control" id="weight" name="weight" 
                                       value="{{ product.weight }}" min="0">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="dimensions_length" class="form-label">Longueur (cm)</label>
                                <input type="number" step="0.01" class="form-control" id="dimensions_length" name="dimensions[length]" 
                                       value="{{ product.dimensions.length ?? '' }}" min="0">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="dimensions_width" class="form-label">Largeur (cm)</label>
                                <input type="number" step="0.01" class="form-control" id="dimensions_width" name="dimensions[width]" 
                                       value="{{ product.dimensions.width ?? '' }}" min="0">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="dimensions_height" class="form-label">Hauteur (cm)</label>
                                <input type="number" step="0.01" class="form-control" id="dimensions_height" name="dimensions[height]" 
                                       value="{{ product.dimensions.height ?? '' }}" min="0">
                            </div>
                        </div>
                    </div>

                    <!-- Categories and Brand -->
                    <h6 class="mb-3"><i class="bi bi-tags me-2"></i>Classification</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="categoryIds" class="form-label">Catégories</label>
                                <select class="form-select" id="categoryIds" name="categoryIds[]" multiple>
                                    {% for category in categories %}
                                    {% set isSelected = false %}
                                    {% for productCategory in product.categories %}
                                        {% if productCategory.id == category.id %}
                                            {% set isSelected = true %}
                                        {% endif %}
                                    {% endfor %}
                                    <option value="{{ category.id }}" {{ isSelected ? 'selected' : '' }}>
                                        {{ category.getName(app.request.locale, 'fr') }}
                                    </option>
                                    {% endfor %}
                                </select>
                                <div class="form-text">Maintenez Ctrl/Cmd pour sélectionner plusieurs catégories</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="brandId" class="form-label">Marque</label>
                                <select class="form-select" id="brandId" name="brandId">
                                    <option value="">Sélectionner une marque</option>
                                    {% for brand in brands %}
                                    <option value="{{ brand.id }}" 
                                            {{ product.brand and product.brand.id == brand.id ? 'selected' : '' }}>
                                        {{ brand.getName(app.request.locale, 'fr') }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Product Type Options -->
                    <h6 class="mb-3"><i class="bi bi-gear me-2"></i>Type de produit</h6>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="isVariable" name="isVariable" 
                                           {{ product.isVariable ? 'checked' : '' }}>
                                    <label class="form-check-label" for="isVariable">Produit variable</label>
                                    <div class="form-text">Ce produit a des variations (taille, couleur, etc.)</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="isDigital" name="isDigital" 
                                           {{ product.isDigital ? 'checked' : '' }}>
                                    <label class="form-check-label" for="isDigital">Produit numérique</label>
                                    <div class="form-text">Ebook, logiciel, service en ligne, etc.</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
            </div>

            <!-- Translations -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-translate me-2"></i>Traductions
                    </h5>
                </div>
                <div class="card-body">
                    {% if languages %}
                    <ul class="nav nav-tabs" id="languageTabs">
                        {% for language in languages %}
                        <li class="nav-item">
                            <button class="nav-link {{ loop.first ? 'active' : '' }}" 
                                    id="tab-{{ language.code }}" 
                                    data-bs-toggle="tab" 
                                    data-bs-target="#content-{{ language.code }}" 
                                    type="button">
                                <span class="badge bg-primary me-2">{{ language.code|upper }}</span>
                                {{ language.nativeName }}
                                {% if language.isDefault() %}
                                <i class="bi bi-star-fill text-warning ms-1" title="Langue par défaut"></i>
                                {% endif %}
                            </button>
                        </li>
                        {% endfor %}
                    </ul>

                    <div class="tab-content mt-3" id="languageTabsContent">
                        {% for language in languages %}
                        {% set translation = translations[language.code] ?? null %}
                        <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" 
                             id="content-{{ language.code }}">
                            
                            <div class="mb-3">
                                <label for="name-{{ language.code }}" class="form-label">
                                    Nom du produit {{ language.isDefault() ? '*' : '' }}
                                </label>
                                <input type="text" class="form-control" 
                                       id="name-{{ language.code }}" 
                                       name="translations[{{ language.code }}][name]" 
                                       value="{{ translation ? translation.name : '' }}"
                                       {{ language.isDefault() ? 'required' : '' }}>
                            </div>

                            <div class="mb-3">
                                <label for="shortDescription-{{ language.code }}" class="form-label">Description courte</label>
                                <textarea class="form-control" rows="3" 
                                          id="shortDescription-{{ language.code }}" 
                                          name="translations[{{ language.code }}][shortDescription]">{{ translation ? translation.shortDescription : '' }}</textarea>
                            </div>

                            <div class="mb-3">
                                <label for="description-{{ language.code }}" class="form-label">Description complète</label>
                                <textarea class="form-control" rows="6" 
                                          id="description-{{ language.code }}" 
                                          name="translations[{{ language.code }}][description]">{{ translation ? translation.description : '' }}</textarea>
                            </div>

                            <div class="row">
                                {% if language.isDefault() %}
                                <div class="col-md-12">
                                    <div class="alert alert-info mb-3">
                                        <i class="bi bi-info-circle me-2"></i>
                                        <strong>Slug automatique :</strong> Le slug URL sera généré automatiquement à partir du nom du produit.
                                    </div>
                                </div>
                                {% endif %}
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="metaTitle-{{ language.code }}" class="form-label">Titre SEO</label>
                                        <input type="text" class="form-control" 
                                               id="metaTitle-{{ language.code }}" 
                                               name="translations[{{ language.code }}][metaTitle]" 
                                               value="{{ translation ? translation.metaTitle : '' }}">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="metaDescription-{{ language.code }}" class="form-label">Description SEO</label>
                                <textarea class="form-control" rows="2" 
                                          id="metaDescription-{{ language.code }}" 
                                          name="translations[{{ language.code }}][metaDescription]">{{ translation ? translation.metaDescription : '' }}</textarea>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Aucune langue n'est configurée. Veuillez d'abord configurer les langues.
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Product Variations (only if product is variable) -->
            {% if product.isVariable %}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-diagram-3 me-2"></i>Variations du produit
                    </h5>
                </div>
                <div class="card-body">
                    <div id="productVariants">
                        {% for variant in product.variants %}
                        <div class="card border-secondary mb-3 variant-card" data-variant-index="{{ loop.index0 }}">
                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">Variation {{ loop.index }} - {{ variant.sku ?? 'Nouveau' }}</h6>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeVariant(this)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="variant_{{ loop.index0 }}_sku" class="form-label">SKU</label>
                                            <input type="text" class="form-control" id="variant_{{ loop.index0 }}_sku" 
                                                   name="variants[{{ loop.index0 }}][sku]" value="{{ variant.sku }}" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="variant_{{ loop.index0 }}_price" class="form-label">Prix (€)</label>
                                            <input type="number" step="0.01" class="form-control" id="variant_{{ loop.index0 }}_price" 
                                                   name="variants[{{ loop.index0 }}][price]" value="{{ variant.price }}">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="variant_{{ loop.index0 }}_stock" class="form-label">Stock</label>
                                            <input type="number" class="form-control" id="variant_{{ loop.index0 }}_stock" 
                                                   name="variants[{{ loop.index0 }}][stock]" value="{{ variant.stock }}" min="0">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="variant_{{ loop.index0 }}_isActive" 
                                                   name="variants[{{ loop.index0 }}][isActive]" {{ variant.isActive ? 'checked' : '' }}>
                                            <label class="form-check-label" for="variant_{{ loop.index0 }}_isActive">Variation active</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="variant_{{ loop.index0 }}_sortOrder" class="form-label">Ordre d'affichage</label>
                                            <input type="number" class="form-control" id="variant_{{ loop.index0 }}_sortOrder" 
                                                   name="variants[{{ loop.index0 }}][sortOrder]" value="{{ variant.sortOrder }}" min="0">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% else %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Ce produit n'a pas encore de variations. Cliquez sur "Ajouter une variation" pour commencer.
                        </div>
                        {% endfor %}
                    </div>
                    <button type="button" class="btn btn-outline-primary" onclick="addVariant()">
                        <i class="bi bi-plus me-1"></i>Ajouter une variation
                    </button>
                </div>
            </div>
            {% endif %}
        </div>

        <div class="col-md-4">
            <!-- Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>
                            {{ product.id ? 'Mettre à jour' : 'Créer' }} le produit
                        </button>
                        <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Annuler
                        </a>
                        {% if product.id %}
                        <hr>
                        <form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" 
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash me-1"></i>Supprimer
                            </button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Primary Image -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-image me-2"></i>Image principale
                    </h5>
                </div>
                <div class="card-body">
                    {% include 'components/media_selector.html.twig' with {
                        'selectedMedia': product.primaryImage,
                        'inputName': 'primaryImageId',
                        'label': '',
                        'required': false
                    } %}
                </div>
            </div>

            <!-- Additional Images -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-images me-2"></i>Images supplémentaires
                    </h5>
                </div>
                <div class="card-body">
                    <div id="additionalImages">
                        {% for media in product.media %}
                            <div class="additional-image-item mb-3" data-index="{{ loop.index0 }}">
                                {% include 'components/media_selector.html.twig' with {
                                    'selectedMedia': media,
                                    'inputName': 'mediaIds[' ~ loop.index0 ~ ']',
                                    'label': 'Image ' ~ loop.index,
                                    'required': false
                                } %}
                                <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="removeAdditionalImage(this)">
                                    <i class="bi bi-trash me-1"></i>Supprimer
                                </button>
                            </div>
                        {% endfor %}
                    </div>
                    <button type="button" class="btn btn-outline-primary btn-sm w-100" onclick="addAdditionalImage()">
                        <i class="bi bi-plus me-1"></i>Ajouter une image
                    </button>
                </div>
            </div>

            <!-- Product Info -->
            {% if product.id %}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informations</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">ID:</dt>
                        <dd class="col-sm-7">#{{ product.id }}</dd>
                        
                        <dt class="col-sm-5">Créé le:</dt>
                        <dd class="col-sm-7">
                            {% if product.createdAt %}
                            {{ product.createdAt|date('d/m/Y H:i') }}
                            {% else %}
                            N/A
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-5">Modifié le:</dt>
                        <dd class="col-sm-7">
                            {% if product.updatedAt %}
                            {{ product.updatedAt|date('d/m/Y H:i') }}
                            {% else %}
                            N/A
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</form>
{% endblock %}

{% block extra_javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Slug generation is now handled automatically on the server side
    console.log('Automatic slug generation enabled');
});

let additionalImageIndex = {{ product.media|length }};

function addAdditionalImage() {
    const container = document.getElementById('additionalImages');
    const newImageHtml = `
        <div class="additional-image-item mb-3" data-index="${additionalImageIndex}">
            <div class="mb-3">
                <label class="form-label">Image ${additionalImageIndex + 1}</label>
                <div class="media-selector" id="mediaSelector_mediaIds[${additionalImageIndex}]">
                    <input type="hidden" name="mediaIds[${additionalImageIndex}]" value="" id="mediaInput_mediaIds[${additionalImageIndex}]">
                    <div class="media-preview d-none" id="mediaPreview_mediaIds[${additionalImageIndex}]">
                        <div class="media-preview-container">
                            <img src="" alt="" class="media-preview-image" style="display: none;">
                            <div class="media-preview-overlay">
                                <button type="button" class="btn btn-sm btn-outline-light me-2" onclick="openMediaLibrary('mediaIds[${additionalImageIndex}]')">
                                    <i class="bi bi-pencil"></i> Modifier
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeSelectedMedia('mediaIds[${additionalImageIndex}]')">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>
                            </div>
                        </div>
                        <div class="media-preview-info">
                            <small class="text-muted">Image sélectionnée</small>
                        </div>
                    </div>
                    <div class="media-selector-empty" id="mediaEmpty_mediaIds[${additionalImageIndex}]">
                        <button type="button" class="btn btn-outline-primary w-100" onclick="openMediaLibrary('mediaIds[${additionalImageIndex}]')">
                            <i class="bi bi-image me-2"></i>Sélectionner une image
                        </button>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="removeAdditionalImage(this)">
                <i class="bi bi-trash me-1"></i>Supprimer
            </button>
        </div>
    `;
    container.insertAdjacentHTML('beforeend', newImageHtml);
    additionalImageIndex++;
}

function removeAdditionalImage(button) {
    const imageItem = button.closest('.additional-image-item');
    imageItem.remove();
}

// Product Variants Management
let variantIndex = {{ product.variants|length }};

function addVariant() {
    const container = document.getElementById('productVariants');
    const newVariantHtml = `
        <div class="card border-secondary mb-3 variant-card" data-variant-index="${variantIndex}">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Variation ${variantIndex + 1} - Nouveau</h6>
                <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeVariant(this)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="variant_${variantIndex}_sku" class="form-label">SKU</label>
                            <input type="text" class="form-control" id="variant_${variantIndex}_sku" 
                                   name="variants[${variantIndex}][sku]" value="" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="variant_${variantIndex}_price" class="form-label">Prix (€)</label>
                            <input type="number" step="0.01" class="form-control" id="variant_${variantIndex}_price" 
                                   name="variants[${variantIndex}][price]" value="">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="variant_${variantIndex}_stock" class="form-label">Stock</label>
                            <input type="number" class="form-control" id="variant_${variantIndex}_stock" 
                                   name="variants[${variantIndex}][stock]" value="0" min="0">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="variant_${variantIndex}_isActive" 
                                   name="variants[${variantIndex}][isActive]" checked>
                            <label class="form-check-label" for="variant_${variantIndex}_isActive">Variation active</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="variant_${variantIndex}_sortOrder" class="form-label">Ordre d'affichage</label>
                            <input type="number" class="form-control" id="variant_${variantIndex}_sortOrder" 
                                   name="variants[${variantIndex}][sortOrder]" value="${variantIndex}" min="0">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    `;
    container.insertAdjacentHTML('beforeend', newVariantHtml);
    variantIndex++;
}

function removeVariant(button) {
    const variantCard = button.closest('.variant-card');
    variantCard.remove();
}

// Toggle variants section based on isVariable checkbox
document.addEventListener('DOMContentLoaded', function() {
    const isVariableCheckbox = document.getElementById('isVariable');
    const variantsSection = document.querySelector('.card:has(#productVariants)');
    
    if (isVariableCheckbox && variantsSection) {
        function toggleVariantsSection() {
            if (isVariableCheckbox.checked) {
                variantsSection.style.display = 'block';
            } else {
                variantsSection.style.display = 'none';
            }
        }
        
        isVariableCheckbox.addEventListener('change', toggleVariantsSection);
        toggleVariantsSection(); // Initialize on page load
    }
});
</script>
