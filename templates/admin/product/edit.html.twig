{% extends 'admin/base.html.twig' %}

{% block title %}{{ product.id ? 'Modifier' : 'Nouveau' }} Produit - Administration{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-box-seam me-2"></i>{{ product.id ? 'Modifier' : 'Nouveau' }} Produit
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="{{ path('admin_product_index') }}">Produits</a></li>
                <li class="breadcrumb-item active">{{ product.id ? 'Modifier' : 'Nouveau' }}</li>
            </ol>
        </nav>
    </div>
    <div class="btn-group">
        {% if product.id %}
        <a href="{{ path('admin_product_show', {'id': product.id}) }}" class="btn btn-outline-primary">
            <i class="bi bi-eye me-1"></i>Voir
        </a>
        {% endif %}
        <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Retour
        </a>
    </div>
</div>

<form method="post" id="productForm">
    <div class="row">
        <div class="col-md-8">
            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Informations de base
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="sku" class="form-label">SKU *</label>
                                <input type="text" class="form-control" id="sku" name="sku" 
                                       value="{{ product.sku }}" required>
                                <div class="form-text">Code unique du produit</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="price" class="form-label">Prix de base (€) *</label>
                                <input type="number" step="0.01" class="form-control" id="price" name="price" 
                                       value="{{ product.price }}" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="stock" class="form-label">Stock</label>
                                <input type="number" class="form-control" id="stock" name="stock" 
                                       value="{{ product.stock }}" min="0">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="weight" class="form-label">Poids (kg)</label>
                                <input type="number" step="0.01" class="form-control" id="weight" name="weight" 
                                       value="{{ product.weight }}" min="0">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="categoryId" class="form-label">Catégorie</label>
                                <select class="form-select" id="categoryId" name="categoryId">
                                    <option value="">Sélectionner une catégorie</option>
                                    {% for category in categories %}
                                    {% set isSelected = false %}
                                    {% for productCategory in product.categories %}
                                        {% if productCategory.id == category.id %}
                                            {% set isSelected = true %}
                                        {% endif %}
                                    {% endfor %}
                                    <option value="{{ category.id }}" {{ isSelected ? 'selected' : '' }}>
                                        {{ category.getName() }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="brandId" class="form-label">Marque</label>
                                <select class="form-select" id="brandId" name="brandId">
                                    <option value="">Sélectionner une marque</option>
                                    {% for brand in brands %}
                                    <option value="{{ brand.id }}" 
                                            {{ product.brand and product.brand.id == brand.id ? 'selected' : '' }}>
                                        {{ brand.getName() }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Options</label>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="isActive" name="isActive" 
                                           {{ product.isActive ? 'checked' : '' }}>
                                    <label class="form-check-label" for="isActive">Produit actif</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Translations -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-translate me-2"></i>Traductions
                    </h5>
                </div>
                <div class="card-body">
                    {% if languages %}
                    <ul class="nav nav-tabs" id="languageTabs">
                        {% for language in languages %}
                        <li class="nav-item">
                            <button class="nav-link {{ loop.first ? 'active' : '' }}" 
                                    id="tab-{{ language.code }}" 
                                    data-bs-toggle="tab" 
                                    data-bs-target="#content-{{ language.code }}" 
                                    type="button">
                                <span class="badge bg-primary me-2">{{ language.code|upper }}</span>
                                {{ language.nativeName }}
                                {% if language.isDefault() %}
                                <i class="bi bi-star-fill text-warning ms-1" title="Langue par défaut"></i>
                                {% endif %}
                            </button>
                        </li>
                        {% endfor %}
                    </ul>

                    <div class="tab-content mt-3" id="languageTabsContent">
                        {% for language in languages %}
                        {% set translation = translations[language.code] ?? null %}
                        <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" 
                             id="content-{{ language.code }}">
                            
                            <div class="mb-3">
                                <label for="name-{{ language.code }}" class="form-label">
                                    Nom du produit {{ language.isDefault() ? '*' : '' }}
                                </label>
                                <input type="text" class="form-control" 
                                       id="name-{{ language.code }}" 
                                       name="translations[{{ language.code }}][name]" 
                                       value="{{ translation ? translation.name : '' }}"
                                       {{ language.isDefault() ? 'required' : '' }}>
                            </div>

                            <div class="mb-3">
                                <label for="shortDescription-{{ language.code }}" class="form-label">Description courte</label>
                                <textarea class="form-control" rows="3" 
                                          id="shortDescription-{{ language.code }}" 
                                          name="translations[{{ language.code }}][shortDescription]">{{ translation ? translation.shortDescription : '' }}</textarea>
                            </div>

                            <div class="mb-3">
                                <label for="description-{{ language.code }}" class="form-label">Description complète</label>
                                <textarea class="form-control" rows="6" 
                                          id="description-{{ language.code }}" 
                                          name="translations[{{ language.code }}][description]">{{ translation ? translation.description : '' }}</textarea>
                            </div>

                            <div class="row">
                                {% if language.isDefault() %}
                                <div class="col-md-12">
                                    <div class="alert alert-info mb-3">
                                        <i class="bi bi-info-circle me-2"></i>
                                        <strong>Slug automatique :</strong> Le slug URL sera généré automatiquement à partir du nom du produit.
                                    </div>
                                </div>
                                {% endif %}
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="metaTitle-{{ language.code }}" class="form-label">Titre SEO</label>
                                        <input type="text" class="form-control" 
                                               id="metaTitle-{{ language.code }}" 
                                               name="translations[{{ language.code }}][metaTitle]" 
                                               value="{{ translation ? translation.metaTitle : '' }}">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="metaDescription-{{ language.code }}" class="form-label">Description SEO</label>
                                <textarea class="form-control" rows="2" 
                                          id="metaDescription-{{ language.code }}" 
                                          name="translations[{{ language.code }}][metaDescription]">{{ translation ? translation.metaDescription : '' }}</textarea>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Aucune langue n'est configurée. Veuillez d'abord configurer les langues.
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>
                            {{ product.id ? 'Mettre à jour' : 'Créer' }} le produit
                        </button>
                        <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Annuler
                        </a>
                        {% if product.id %}
                        <hr>
                        <form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" 
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash me-1"></i>Supprimer
                            </button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Primary Image -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-image me-2"></i>Image principale
                    </h5>
                </div>
                <div class="card-body">
                    {% include 'components/media_selector.html.twig' with {
                        'selectedMedia': product.primaryImage,
                        'inputName': 'primaryImageId',
                        'label': '',
                        'required': false
                    } %}
                </div>
            </div>

            <!-- Additional Images -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-images me-2"></i>Images supplémentaires
                    </h5>
                </div>
                <div class="card-body">
                    <div id="additionalImages">
                        {% for media in product.media %}
                            <div class="additional-image-item mb-3" data-index="{{ loop.index0 }}">
                                {% include 'components/media_selector.html.twig' with {
                                    'selectedMedia': media,
                                    'inputName': 'mediaIds[' ~ loop.index0 ~ ']',
                                    'label': 'Image ' ~ loop.index,
                                    'required': false
                                } %}
                                <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="removeAdditionalImage(this)">
                                    <i class="bi bi-trash me-1"></i>Supprimer
                                </button>
                            </div>
                        {% endfor %}
                    </div>
                    <button type="button" class="btn btn-outline-primary btn-sm w-100" onclick="addAdditionalImage()">
                        <i class="bi bi-plus me-1"></i>Ajouter une image
                    </button>
                </div>
            </div>

            <!-- Product Info -->
            {% if product.id %}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informations</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">ID:</dt>
                        <dd class="col-sm-7">#{{ product.id }}</dd>
                        
                        <dt class="col-sm-5">Créé le:</dt>
                        <dd class="col-sm-7">
                            {% if product.createdAt %}
                            {{ product.createdAt|date('d/m/Y H:i') }}
                            {% else %}
                            N/A
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-5">Modifié le:</dt>
                        <dd class="col-sm-7">
                            {% if product.updatedAt %}
                            {{ product.updatedAt|date('d/m/Y H:i') }}
                            {% else %}
                            N/A
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</form>
{% endblock %}

{% block extra_javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Slug generation is now handled automatically on the server side
    console.log('Automatic slug generation enabled');
});

let additionalImageIndex = {{ product.media|length }};

function addAdditionalImage() {
    const container = document.getElementById('additionalImages');
    const newImageHtml = `
        <div class="additional-image-item mb-3" data-index="${additionalImageIndex}">
            <div class="mb-3">
                <label class="form-label">Image ${additionalImageIndex + 1}</label>
                <div class="media-selector" id="mediaSelector_mediaIds[${additionalImageIndex}]">
                    <input type="hidden" name="mediaIds[${additionalImageIndex}]" value="" id="mediaInput_mediaIds[${additionalImageIndex}]">
                    <div class="media-preview d-none" id="mediaPreview_mediaIds[${additionalImageIndex}]">
                        <div class="media-preview-container">
                            <img src="" alt="" class="media-preview-image" style="display: none;">
                            <div class="media-preview-overlay">
                                <button type="button" class="btn btn-sm btn-outline-light me-2" onclick="openMediaLibrary('mediaIds[${additionalImageIndex}]')">
                                    <i class="bi bi-pencil"></i> Modifier
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeSelectedMedia('mediaIds[${additionalImageIndex}]')">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>
                            </div>
                        </div>
                        <div class="media-preview-info">
                            <small class="text-muted">Image sélectionnée</small>
                        </div>
                    </div>
                    <div class="media-selector-empty" id="mediaEmpty_mediaIds[${additionalImageIndex}]">
                        <button type="button" class="btn btn-outline-primary w-100" onclick="openMediaLibrary('mediaIds[${additionalImageIndex}]')">
                            <i class="bi bi-image me-2"></i>Sélectionner une image
                        </button>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="removeAdditionalImage(this)">
                <i class="bi bi-trash me-1"></i>Supprimer
            </button>
        </div>
    `;
    container.insertAdjacentHTML('beforeend', newImageHtml);
    additionalImageIndex++;
}

function removeAdditionalImage(button) {
    const imageItem = button.closest('.additional-image-item');
    imageItem.remove();
}
</script>
{% endblock %}