{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Attributs - Administration{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-tags me-2"></i>Gestion des Attributs
        </h1>
        <p class="text-muted mb-0">Gérez les attributs pour les variations de produits</p>
    </div>
    <div class="btn-group">
        <a href="{{ path('admin_attribute_value_index') }}" class="btn btn-outline-info">
            <i class="bi bi-list me-1"></i>Valeurs d'attributs
        </a>
        <a href="{{ path('admin_attribute_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Nouvel Attribut
        </a>
    </div>
</div>

{% if statistics %}
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Total Attributs</h6>
                        <h3 class="mb-0">{{ statistics.totalAttributes ?? attributes|length }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-tags fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Attributs Actifs</h6>
                        <h3 class="mb-0">{{ statistics.activeAttributes ?? 0 }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-check-circle fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Variantes</h6>
                        <h3 class="mb-0">{{ statistics.variantAttributes ?? 0 }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-layers fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Filtrables</h6>
                        <h3 class="mb-0">{{ statistics.filterableAttributes ?? 0 }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-funnel fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Liste des Attributs</h5>
        </div>
    </div>
    <div class="card-body">
        {% if attributes %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Valeurs</th>
                        <th>Options</th>
                        <th>Statut</th>
                        {% if languages|length > 1 %}
                        <th>Traductions</th>
                        {% endif %}
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for attribute in attributes %}
                    <tr>
                        <td>
                            <code>{{ attribute.code }}</code>
                        </td>
                        <td>
                            <strong>{{ attribute.getName(app.request.locale, 'fr') }}</strong>
                        </td>
                        <td>
                            {% set typeLabels = {
                                'text': 'Texte',
                                'number': 'Nombre', 
                                'select': 'Sélection',
                                'color': 'Couleur',
                                'boolean': 'Booléen'
                            } %}
                            <span class="badge bg-secondary">{{ typeLabels[attribute.type] ?? attribute.type }}</span>
                        </td>
                        <td>
                            <span class="badge bg-info">{{ attribute.values|length }} valeurs</span>
                            {% if attribute.values|length > 0 %}
                            <br><small class="text-muted">
                                {% for value in attribute.values[:3] %}
                                    {{ value.getName(app.request.locale, 'fr') }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                                {% if attribute.values|length > 3 %}..{% endif %}
                            </small>
                            {% endif %}
                        </td>
                        <td>
                            {% if attribute.isVariant %}
                            <span class="badge bg-primary" title="Utilisé pour les variantes">Variante</span>
                            {% endif %}
                            {% if attribute.isFilterable %}
                            <span class="badge bg-info" title="Filtrable">Filtrable</span>
                            {% endif %}
                            {% if attribute.isRequired %}
                            <span class="badge bg-warning" title="Obligatoire">Requis</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if attribute.isActive %}
                                <span class="badge bg-success">Actif</span>
                            {% else %}
                                <span class="badge bg-secondary">Inactif</span>
                            {% endif %}
                        </td>
                        {% if languages|length > 1 %}
                        <td>
                            <span class="badge bg-info">{{ attribute.translations|length }}/{{ languages|length }}</span>
                        </td>
                        {% endif %}
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('admin_attribute_show', {'id': attribute.id}) }}" 
                                   class="btn btn-outline-primary" title="Voir">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('admin_attribute_value_index', {'attribute': attribute.id}) }}" 
                                   class="btn btn-outline-info" title="Valeurs">
                                    <i class="bi bi-list"></i>
                                </a>
                                <a href="{{ path('admin_attribute_edit', {'id': attribute.id}) }}" 
                                   class="btn btn-outline-secondary" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" action="{{ path('admin_attribute_delete', {'id': attribute.id}) }}" 
                                      style="display: inline-block;" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet attribut ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ attribute.id) }}">
                                    <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-5">
            <i class="bi bi-tags display-1 text-muted"></i>
            <h4 class="mt-3">Aucun attribut</h4>
            <p class="text-muted">Commencez par créer votre premier attribut pour les variations de produits.</p>
            <a href="{{ path('admin_attribute_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i>Créer un attribut
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
