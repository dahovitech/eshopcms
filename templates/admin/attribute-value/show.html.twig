{% extends 'admin/base.html.twig' %}

{% block title %}Valeur {{ attributeValue.getName(app.request.locale, 'fr') }} - Administration{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-list me-2"></i>{{ attributeValue.getName(app.request.locale, 'fr') }}
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="{{ path('admin_attribute_index') }}">Attributs</a></li>
                <li class="breadcrumb-item">
                    <a href="{{ path('admin_attribute_show', {'id': attributeValue.attribute.id}) }}">
                        {{ attributeValue.attribute.getName(app.request.locale, 'fr') }}
                    </a>
                </li>
                <li class="breadcrumb-item active">{{ attributeValue.getName(app.request.locale, 'fr') }}</li>
            </ol>
        </nav>
    </div>
    <div class="btn-group">
        <a href="{{ path('admin_attribute_value_edit', {'id': attributeValue.id}) }}" class="btn btn-outline-secondary">
            <i class="bi bi-pencil me-1"></i>Modifier
        </a>
        <a href="{{ path('admin_attribute_show', {'id': attributeValue.attribute.id}) }}" class="btn btn-outline-info">
            <i class="bi bi-tags me-1"></i>Attribut
        </a>
        <a href="{{ path('admin_attribute_value_index', {'attribute': attributeValue.attribute.id}) }}" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i>Retour
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Basic Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Informations de base
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Valeur interne:</dt>
                    <dd class="col-sm-9"><code>{{ attributeValue.value }}</code></dd>
                    
                    <dt class="col-sm-3">Attribut:</dt>
                    <dd class="col-sm-9">
                        <a href="{{ path('admin_attribute_show', {'id': attributeValue.attribute.id}) }}" class="text-decoration-none">
                            <strong>{{ attributeValue.attribute.getName(app.request.locale, 'fr') }}</strong>
                        </a>
                        <br><small class="text-muted">{{ attributeValue.attribute.code }}</small>
                    </dd>
                    
                    {% if attributeValue.hexColor %}
                    <dt class="col-sm-3">Couleur:</dt>
                    <dd class="col-sm-9">
                        <span class="d-inline-block me-2" 
                              style="width: 30px; height: 30px; background-color: {{ attributeValue.hexColor }}; border: 1px solid #ccc; border-radius: 4px; vertical-align: middle;"></span>
                        <code>{{ attributeValue.hexColor }}</code>
                    </dd>
                    {% endif %}
                    
                    <dt class="col-sm-3">Ordre de tri:</dt>
                    <dd class="col-sm-9">{{ attributeValue.sortOrder }}</dd>
                    
                    <dt class="col-sm-3">Statut:</dt>
                    <dd class="col-sm-9">
                        {% if attributeValue.isActive %}
                        <span class="badge bg-success">Active</span>
                        {% else %}
                        <span class="badge bg-secondary">Inactive</span>
                        {% endif %}
                    </dd>
                    
                    {% if attributeValue.image %}
                    <dt class="col-sm-3">Image:</dt>
                    <dd class="col-sm-9">
                        <img src="{{ attributeValue.image.webPath }}" alt="{{ attributeValue.image.alt }}" 
                             class="img-thumbnail" style="max-width: 100px; max-height: 100px;">
                        <br><small class="text-muted">{{ attributeValue.image.fileName }}</small>
                    </dd>
                    {% endif %}
                </dl>
            </div>
        </div>

        <!-- Translations -->
        {% if languages|length > 1 %}
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-translate me-2"></i>Traductions
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Langue</th>
                                <th>Nom</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for language in languages %}
                            {% set translation = attributeValue.getTranslation(language.code) %}
                            <tr>
                                <td>
                                    <span class="badge bg-primary">{{ language.code|upper }}</span>
                                    {{ language.nativeName }}
                                </td>
                                <td>{{ translation ? translation.name : (attributeValue.value ?: '-') }}</td>
                                <td>{{ translation ? (translation.description|slice(0, 100) ~ (translation.description|length > 100 ? '...' : '')) : '-' }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <div class="col-lg-4">
        <!-- Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('admin_attribute_value_edit', {'id': attributeValue.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil me-1"></i>Modifier la valeur
                    </a>
                    <a href="{{ path('admin_attribute_value_new', {'attribute': attributeValue.attribute.id}) }}" class="btn btn-outline-primary">
                        <i class="bi bi-plus me-1"></i>Nouvelle valeur
                    </a>
                    <hr>
                    <form method="post" action="{{ path('admin_attribute_value_delete', {'id': attributeValue.id}) }}" 
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette valeur ?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ attributeValue.id) }}">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-trash me-1"></i>Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Usage -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Utilisation</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-6">Variantes:</dt>
                    <dd class="col-sm-6">
                        <span class="badge bg-info">{{ attributeValue.productVariants|length }}</span>
                    </dd>
                </dl>
                {% if attributeValue.productVariants|length > 0 %}
                <hr>
                <h6>Produits utilisant cette valeur:</h6>
                <ul class="list-unstyled small">
                    {% for variant in attributeValue.productVariants[:5] %}
                    <li>
                        <a href="{{ path('admin_product_show', {'id': variant.product.id}) }}" class="text-decoration-none">
                            {{ variant.product.getName(app.request.locale, 'fr') }}
                        </a>
                        {% if variant.getName() != variant.product.getName(app.request.locale, 'fr') %}
                        <br><small class="text-muted ms-2">{{ variant.getName() }}</small>
                        {% endif %}
                    </li>
                    {% endfor %}
                    {% if attributeValue.productVariants|length > 5 %}
                    <li><small class="text-muted">... et {{ attributeValue.productVariants|length - 5 }} autres</small></li>
                    {% endif %}
                </ul>
                {% endif %}
            </div>
        </div>

        <!-- Informations -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Informations</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">ID:</dt>
                    <dd class="col-sm-7">#{{ attributeValue.id }}</dd>
                    
                    <dt class="col-sm-5">Créé le:</dt>
                    <dd class="col-sm-7">{{ attributeValue.createdAt|date('d/m/Y H:i') }}</dd>
                    
                    <dt class="col-sm-5">Modifié le:</dt>
                    <dd class="col-sm-7">{{ attributeValue.updatedAt|date('d/m/Y H:i') }}</dd>
                    
                    <dt class="col-sm-5">Traductions:</dt>
                    <dd class="col-sm-7">
                        <span class="badge bg-info">{{ attributeValue.translations|length }}/{{ languages|length }}</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
{% endblock %}